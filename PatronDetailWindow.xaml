<Window x:Class="PatronGamingMonitor.Views.PatronDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:PatronGamingMonitor.UserControls"
    mc:Ignorable="d"
    Title="Patron Information"
    MinHeight="600"
    MinWidth="400"
    Height="650"
    Width="500"
    WindowStyle="None"
    ResizeMode="CanResize"
    Background="Transparent"
    AllowsTransparency="True"
    WindowStartupLocation="CenterScreen"
    SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <!-- Carousel Navigation Button Style -->
        <Style x:Key="CarouselButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="#1A3650" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E1B7A7" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D4A595" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Indicator Dot Style -->
        <Style x:Key="IndicatorDotStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Fill" Value="#CCCCCC" />
            <Setter Property="Margin" Value="4,0" />
        </Style>
    </Window.Resources>

    <Border Background="#F8F9FA" CornerRadius="5" BorderThickness="2" BorderBrush="#1A3650">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="#1A3650" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title Bar with Drag Support -->
            <Border Grid.Row="0"
                Background="#1A3650"
                Height="50"
                CornerRadius="0,0,0,0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5" Color="Black" />
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Title Text with Icon -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                        Margin="25,0">
                        <StackPanel>
                            <TextBlock Text="Player Information"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="1"
                        Content="✕"
                        Width="45"
                        Height="45"
                        Margin="0,0,15,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Close Window"
                        Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="22.5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border"
                                                        Property="Background" Value="#E81123" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content with Viewbox for Responsive Scaling -->
            <Viewbox Grid.Row="1" 
                     x:Name="ContentViewbox"
                     Stretch="Uniform" 
                     StretchDirection="Both">
                <Grid Width="500" Height="830">
                    <StackPanel Margin="20">

                        <!-- IMAGE CAROUSEL -->
                        <Border Background="White"
                            CornerRadius="12"
                            Padding="0"
                            Margin="0,15,0,20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15"
                                    Color="#1A3650" />
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="280" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Image Title -->
                                <Border Grid.Row="0" Background="#F8F9FA" Padding="12,8"
                                    CornerRadius="12,12,0,0">
                                    <TextBlock x:Name="ImageTitle"
                                        Text="Profile Photo"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#1A3650"
                                        HorizontalAlignment="Center" />
                                </Border>

                                <!-- Image Container with Navigation -->
                                <Grid Grid.Row="1">
                                    <!-- Image Display -->
                                    <Image x:Name="CarouselImage"
                                        Stretch="UniformToFill"
                                        Source="{Binding PatronImageSource}"
                                        Margin="0" />

                                    <!-- Image Counter -->
                                    <Border Background="#CC1A3650"
                                        CornerRadius="15"
                                        Padding="12,6"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="15">
                                        <TextBlock x:Name="ImageCounter"
                                            Text="1 / 2"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Foreground="White" />
                                    </Border>
                                </Grid>

                                <!-- Image Thumbnails -->
                                <ItemsControl x:Name="ThumbnailsContainer"
                                    Grid.Row="2"
                                    Margin="0,12"
                                    HorizontalAlignment="Center">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="ThumbnailBorder"
                                                Width="80"
                                                Height="50"
                                                Margin="5"
                                                BorderThickness="3"
                                                BorderBrush="#CCCCCC"
                                                CornerRadius="8"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="Thumbnail_Click"
                                                Tag="{Binding Index}">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2"
                                                        Opacity="0.2" />
                                                </Border.Effect>

                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <!-- Hover Effect -->
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush"
                                                                    Value="#E1B7A7" />
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect
                                                                            BlurRadius="12"
                                                                            ShadowDepth="3"
                                                                            Opacity="0.4"
                                                                            Color="#E1B7A7" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>

                                                            <!-- Selected Effect -->
                                                            <DataTrigger Binding="{Binding IsSelected}"
                                                                Value="True">
                                                                <Setter Property="BorderBrush"
                                                                    Value="#1A3650" />
                                                                <Setter Property="BorderThickness"
                                                                    Value="4" />
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect
                                                                            BlurRadius="15"
                                                                            ShadowDepth="3"
                                                                            Opacity="0.5"
                                                                            Color="#1A3650" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <!-- WRAP all Image and Selected Indicator to one Grid -->
                                                <Grid>
                                                    <!-- Thumbnail Image -->
                                                    <Image Source="{Binding ImageSource}"
                                                        Stretch="UniformToFill"
                                                        Height="50"
                                                        Width="100"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center" />

                                                    <!-- Selected Indicator Overlay -->
                                                    <Border Background="#CC1A3650"
                                                        CornerRadius="0,0,6,0"
                                                        Padding="6,2"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <TextBlock Text="✓"
                                                            FontSize="10"
                                                            FontWeight="Bold"
                                                            Foreground="White" />
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </Grid>
                        </Border>

                        <!-- INFORMATION SECTION -->
                        <Border Background="White"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15"
                                    Color="#1A3650" />
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Section Title -->
                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                    Text="📋 Personal Information"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="#1A3650"
                                    Margin="0,0,0,15" />

                                <!-- Patron ID -->
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                    Text="Player ID:"
                                    FontWeight="SemiBold"
                                    Margin="0,8" />
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                    Text="{Binding PatronInfo.playerID}"
                                    FontWeight="Bold"
                                    Foreground="#1A3650"
                                    FontSize="14"
                                    Margin="0,8" />

                                <!-- Full Name -->
                                <TextBlock Grid.Row="2" Grid.Column="0"
                                    Text="Full Name:"
                                    FontWeight="SemiBold"
                                    Margin="0,8" />
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                    Text="{Binding PatronInfo.fullName}"
                                    FontWeight="SemiBold"
                                    Foreground="#1A3650"
                                    Margin="0,8"
                                    TextWrapping="Wrap" />

                                <!-- ID Card -->
                                <TextBlock Grid.Row="3" Grid.Column="0"
                                    Text="ID Card:"
                                    FontWeight="SemiBold"
                                    Margin="0,8" />
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                    Text="{Binding PatronInfo.idCard}"
                                    Foreground="#1A3650"
                                    Margin="0,8" />

                                <!-- Address -->
                                <TextBlock Grid.Row="4" Grid.Column="0"
                                    Text="Address:"
                                    FontWeight="SemiBold"
                                    Margin="0,8"
                                    VerticalAlignment="Top" />
                                <TextBlock Grid.Row="4" Grid.Column="1"
                                    Text="{Binding PatronInfo.address}"
                                    Foreground="#1A3650"
                                    Margin="0,8"
                                    TextWrapping="Wrap" />

                                <!-- City -->
                                <TextBlock Grid.Row="5" Grid.Column="0"
                                    Text="City:"
                                    FontWeight="SemiBold"
                                    Margin="0,8" />
                                <TextBlock Grid.Row="5" Grid.Column="1"
                                    Text="{Binding PatronInfo.city}"
                                    Foreground="#1A3650"
                                    Margin="0,8" />

                                <!-- Age & Gender -->
                                <TextBlock Grid.Row="6" Grid.Column="0"
                                    Text="Age / Gender:"
                                    FontWeight="SemiBold"
                                    Margin="0,8" />
                                <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal"
                                    Margin="0,8">
                                    <TextBlock Text="{Binding PatronInfo.age}"
                                        Foreground="#1A3650"
                                        Margin="0,0,8,0" />
                                    <TextBlock Text="/"
                                        Foreground="#999"
                                        Margin="0,0,8,0" />
                                    <TextBlock Text="{Binding PatronInfo.gender}"
                                        Foreground="#1A3650" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Close Button -->
                        <Button Content="Close"
                            Width="120"
                            Height="40"
                            Margin="0,0,0,10"
                            Background="#1A3650"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="20"
                                                    BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border"
                                                            Property="Background" Value="#E1B7A7" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border"
                                                            Property="Background" Value="#D4A595" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Viewbox>

            <!-- Loading Indicator -->
            <Border Grid.Row="1"
                Background="#CC000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                CornerRadius="0,0,15,15">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10" />
                    <TextBlock Text="Loading..."
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>